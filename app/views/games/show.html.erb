<div class="page-header">
  <h3> <%= Team.find(@game.favorite_id).name %>
      vs.
      <%= Team.find(@game.underdog_id).name%></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd><%= @game.game_date.strftime("%A, %m/%d/%Y") %></dd>

      <dt>Time</dt>
      <dd><time><%= @game.game_time.strftime("%l:%M%p") %></time></dd>

      <dt>Favorite</dt>
      <dd><%= Team.find(@game.favorite_id).name %></dd>

      <dt>Underdog</dt>
      <dd><%= Team.find(@game.underdog_id).name %></dd>

      <dt>Home Team</dt>
      <dd><%= Team.find(@game.home_team_id).name %></dd>

      <dt>Spread</dt>
      <dd><%= @game.spread %></dd>

      <dt>Favorite Score</dt>
      <dd><%= @game.final_favorite_score %></dd>

      <dt>Underdog Score</dt>
      <dd><%= @game.final_underdog_score %></dd>

      <dt>Total Picks</dt>
      <dd><%= @game.picks.count %></dd>

    </dl>

    <h4>Game Picks</h4>
    <div class="row">
      <div class="col-md-8">
        <table class="table table-hover">
          <tr>
            <th>Picker</th>
            <th>Pick</th>
            <th>Correct?</th>
          </tr>

          <% @game_picks.each do |pick| %>
          <tr>
            <td><%= pick.user.username %></td>
            <td><%= Team.find(pick.pick_id).name %></td>
            <td><%= pick.final_result %></td>
          </tr>
          <% end %>
        </table>
        </div>
    </div>

    <a href="/picks/" class="btn btn-default">View Picks</a>


    <div class="btn-group">
      <a href="/games" class="btn btn-primary">
        Back
      </a>
      <a href="/games/<%= @game.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_game/<%= @game.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
          </div>
  </div>
</div>
