<div class="page-header">
  <h1>
    Teams
    <a href="/teams/standings" class="btn btn-sm btn-success">View Standings</a>
    <a href="/teams/new" class="btn btn-sm btn-danger">New Team</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-6">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @teams.order(:name).each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">Show</a>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
